# Backend Environment Configuration
NODE_ENV=development
PORT=3000   

# Database Configuration
# MONGODB_URI=mongodb://admin:password123@localhost:27017/xyz_tours?authSource=admin
MONGODB_URI=mongodb://admin:password123@localhost:27017/xyz_tours

# Redis Configuration
REDIS_URL=redis://:redis123@localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-xyz-tours-2024
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-xyz-tours-2024
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Payment Configuration
UPI_MERCHANT_ID=your-upi-merchant-id
PSP_API_KEY=your-psp-api-key
PSP_API_URL=https://api.psp.com/v1

# AWS S3 Configuration (for file uploads)
S3_BUCKET=xyz-tours-storage
S3_REGION=ap-south-1
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# CORS Configuration
CORS_ORIGIN=http://localhost:4321,http://localhost:5173,http://localhost:3001,http://localhost:3002,http://localhost:3000

# Security
BCRYPT_ROUNDS=12
HELMET_ENABLED=true
COMPRESSION_ENABLED=true
