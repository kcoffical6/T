---
// Destinations component
const destinations = [
    {
        name: 'Kerala Backwaters',
        price: '6.5k',
        duration: '12 days trip',
        image: 'https://images.unsplash.com/photo-1602216056096-3b404e37b815?w=400'
    },
    {
        name: 'Ooty, Tamil Nadu',
        price: '4.8k',
        duration: '7 days trip',
        image: 'https://images.unsplash.com/photo-1593693397640-053a69a9630d?w=400'
    },
    {
        name: 'Kodaikanal, Tamil Nadu',
        price: '5.2k',
        duration: '8 days trip',
        image: 'https://images.unsplash.com/photo-1616174795943-b52473551515?w=400'
    },
    {
        name: 'Munnar, Kerala',
        price: '6.0k',
        duration: '10 days trip',
        image: 'https://images.unsplash.com/photo-1566542280315-a4e9b5f9a65a?w=400'
    },
    {
        name: 'Hampi, Karnataka',
        price: '7.2k',
        duration: '14 days trip',
        image: 'https://images.unsplash.com/photo-1590766989748-912a2a02a4e0?w=400'
    },
    {
        name: 'Madurai, Tamil Nadu',
        price: '4.5k',
        duration: '6 days trip',
        image: 'https://images.unsplash.com/photo-1578301594191-ce01952f41b6?w=400'
    }
]
---

<section class='bg-white py-16 dark:bg-gray-900 md:py-24'>
    <div class='container mx-auto px-4'>
        <div class='mb-12 text-center'>
            <p class='text-lg font-semibold text-gray-600 dark:text-gray-400'>Top Selling</p>
            <h2 class='font-serif text-4xl font-bold text-secondary-600 dark:text-secondary-400 md:text-5xl'>
                Top Destinations
            </h2>
        </div>
        <div class='grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3'>
            {
                destinations.map((dest) => (
                    <div class='group overflow-hidden rounded-3xl bg-white shadow-lg transition-transform duration-500 hover:rotate-3 hover:scale-105 dark:bg-gray-800'>
                        <div class='relative'>
                            <img
                                src={dest.image}
                                alt={dest.name}
                                class='h-80 w-full object-cover transition-transform duration-500 group-hover:scale-125'
                            />
                            <div class='absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/60 to-transparent p-6 text-white'>
                                <div class='flex items-center justify-between'>
                                    <h3 class='text-xl font-semibold'>{dest.name}</h3>
                                    <p class='text-lg font-medium'>${dest.price}</p>
                                </div>
                                <div class='mt-2 flex items-center'>
                                    <svg
                                        class='mr-2 size-5 text-primary-500'
                                        xmlns='http://www.w3.org/2000/svg'
                                        fill='none'
                                        viewBox='0 0 24 24'
                                        stroke-width='1.5'
                                        stroke='currentColor'
                                    >
                                        <path
                                            stroke-linecap='round'
                                            stroke-linejoin='round'
                                            d='M12 19.5l-5.25-4.5 1.5-1.5 3.75 3.25L17.25 12l1.5 1.5-6.75 6z'
                                        />
                                    </svg>
                                    <span>{dest.duration}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
