---
// Footer component
import Newsletter from './Newsletter.astro'
---

<Newsletter />
<footer class='bg-white pt-12 dark:bg-gray-900'>
    <div class='container mx-auto px-4'>
        <div class='grid grid-cols-2 gap-8 md:grid-cols-5'>
            <!-- About -->
            <div class='col-span-2 md:col-span-1'>
                <h3 class='mb-2 text-2xl font-bold'>Travel</h3>
                <p class='text-gray-600 dark:text-gray-400'>Travel helps companies manage payments easily.</p>
                <div class='mt-4 flex space-x-4'>
                    <a href='#'
                        ><img
                            src='https://cdn-icons-png.flaticon.com/512/733/733547.png'
                            alt='Facebook'
                            class='size-6'
                        /></a
                    >
                    <a href='#'
                        ><img
                            src='https://cdn-icons-png.flaticon.com/512/2111/2111463.png'
                            alt='Instagram'
                            class='size-6'
                        /></a
                    >
                    <a href='#'
                        ><img
                            src='https://cdn-icons-png.flaticon.com/512/174/174876.png'
                            alt='Twitter'
                            class='size-6'
                        /></a
                    >
                </div>
            </div>
            <!-- Company -->
            <div>
                <h4 class='mb-4 text-lg font-bold'>Company</h4>
                <ul class='space-y-2'>
                    <li><a href='#' class='text-gray-600 hover:text-primary-500 dark:text-gray-400'>About</a></li>
                    <li><a href='#' class='text-gray-600 hover:text-primary-500 dark:text-gray-400'>Press</a></li>
                    <li><a href='#' class='text-gray-600 hover:text-primary-500 dark:text-gray-400'>Careers</a></li>
                    <li><a href='#' class='text-gray-600 hover:text-primary-500 dark:text-gray-400'>Contact</a></li>
                </ul>
            </div>
            <!-- Contact -->
            <div>
                <h4 class='mb-4 text-lg font-bold'>Contact</h4>
                <ul class='space-y-2'>
                    <li><a href='#' class='text-gray-600 hover:text-primary-500 dark:text-gray-400'>Help/FAQ</a></li>
                    <li><a href='#' class='text-gray-600 hover:text-primary-500 dark:text-gray-400'>Press</a></li>
                    <li><a href='#' class='text-gray-600 hover:text-primary-500 dark:text-gray-400'>Affiliates</a></li>
                </ul>
            </div>
            <!-- More -->
            <div>
                <h4 class='mb-4 text-lg font-bold'>More</h4>
                <ul class='space-y-2'>
                    <li><a href='#' class='text-gray-600 hover:text-primary-500 dark:text-gray-400'>Airlinefees</a></li>
                    <li><a href='#' class='text-gray-600 hover:text-primary-500 dark:text-gray-400'>Airline</a></li>
                    <li>
                        <a href='#' class='text-gray-600 hover:text-primary-500 dark:text-gray-400'>Low fare tips</a>
                    </li>
                </ul>
            </div>
            <!-- Discover -->
            <div class='col-span-2 md:col-span-1'>
                <h4 class='mb-4 text-lg font-bold'>Discover our app</h4>
                <div class='flex space-x-4'>
                    <a href='#'
                        ><img
                            src='https://cdn.iconscout.com/icon/free/png-256/google-play-4-226462.png'
                            alt='Google Play'
                            class='h-12'
                        /></a
                    >
                    <a href='#'
                        ><img
                            src='https://cdn.iconscout.com/icon/free/png-256/app-store-4-226461.png'
                            alt='App Store'
                            class='h-12'
                        /></a
                    >
                </div>
            </div>
        </div>
        <div
            class='mt-8 border-t border-gray-200 py-8 text-center text-gray-500 dark:border-gray-700 dark:text-gray-400'
        >
            <p>All rights reserved@travel.co</p>
        </div>
    </div>
</footer>
