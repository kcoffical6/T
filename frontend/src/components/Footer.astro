---
// Footer component
import Newsletter from './Newsletter.astro';
---
<Newsletter/>
<footer class="bg-white pt-12">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-2 md:grid-cols-5 gap-8">
      <!-- About -->
      <div class="col-span-2 md:col-span-1">
        <h3 class="text-2xl font-bold mb-2">Travel</h3>
        <p class="text-gray-600">Travel helps companies manage payments easily.</p>
        <div class="flex space-x-4 mt-4">
          <a href="#"><img src="https://cdn-icons-png.flaticon.com/512/733/733547.png" alt="Facebook" class="w-6 h-6"></a>
          <a href="#"><img src="https://cdn-icons-png.flaticon.com/512/2111/2111463.png" alt="Instagram" class="w-6 h-6"></a>
          <a href="#"><img src="https://cdn-icons-png.flaticon.com/512/174/174876.png" alt="Twitter" class="w-6 h-6"></a>
        </div>
      </div>
      <!-- Company -->
      <div>
        <h4 class="font-bold text-lg mb-4">Company</h4>
        <ul class="space-y-2">
          <li><a href="#" class="text-gray-600 hover:text-primary-500">About</a></li>
          <li><a href="#" class="text-gray-600 hover:text-primary-500">Press</a></li>
          <li><a href="#" class="text-gray-600 hover:text-primary-500">Careers</a></li>
          <li><a href="#" class="text-gray-600 hover:text-primary-500">Contact</a></li>
        </ul>
      </div>
      <!-- Contact -->
      <div>
        <h4 class="font-bold text-lg mb-4">Contact</h4>
        <ul class="space-y-2">
          <li><a href="#" class="text-gray-600 hover:text-primary-500">Help/FAQ</a></li>
          <li><a href="#" class="text-gray-600 hover:text-primary-500">Press</a></li>
          <li><a href="#" class="text-gray-600 hover:text-primary-500">Affiliates</a></li>
        </ul>
      </div>
      <!-- More -->
      <div>
        <h4 class="font-bold text-lg mb-4">More</h4>
        <ul class="space-y-2">
          <li><a href="#" class="text-gray-600 hover:text-primary-500">Airlinefees</a></li>
          <li><a href="#" class="text-gray-600 hover:text-primary-500">Airline</a></li>
          <li><a href="#" class="text-gray-600 hover:text-primary-500">Low fare tips</a></li>
        </ul>
      </div>
      <!-- Discover -->
      <div class="col-span-2 md:col-span-1">
        <h4 class="font-bold text-lg mb-4">Discover our app</h4>
        <div class="flex space-x-4">
          <a href="#"><img src="https://cdn.iconscout.com/icon/free/png-256/google-play-4-226462.png" alt="Google Play" class="h-12"></a>
          <a href="#"><img src="https://cdn.iconscout.com/icon/free/png-256/app-store-4-226461.png" alt="App Store" class="h-12"></a>
        </div>
      </div>
    </div>
    <div class="text-center text-gray-500 py-8 mt-8 border-t border-gray-200">
      <p>All rights reserved@travel.co</p>
    </div>
  </div>
</footer>
