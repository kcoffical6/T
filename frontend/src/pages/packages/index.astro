---
import PackageFilters from '../../components/PackageFilters.astro'
import PackageGrid from '../../components/PackageGrid.astro'
import Layout from '../../layouts/Layout.astro'

const pageTitle = 'South India Tour Packages - XYZ Tours and Travels'
const pageDescription =
    'Explore our comprehensive collection of South India tour packages. From Kerala backwaters to Tamil Nadu temples, discover the best of South India.'
---

<Layout title={pageTitle} description={pageDescription}>
    <div class='min-h-screen bg-white dark:bg-gray-900'>
        <!-- Hero Section -->
        <section class='bg-gradient-to-r from-primary-600 to-primary-800 py-20 text-white'>
            <div class='container mx-auto px-4'>
                <div class='mx-auto max-w-4xl text-center'>
                    <h1 class='mb-6 text-4xl font-bold md:text-6xl'>Discover South India</h1>
                    <p class='mb-8 text-xl opacity-90 md:text-2xl'>
                        From misty hill stations to serene backwaters, explore the diverse beauty of South India
                    </p>
                </div>
            </div>
        </section>

        <!-- Filters -->
        <section class='border-b border-gray-200 bg-white py-8 shadow-sm dark:border-gray-700 dark:bg-gray-800'>
            <div class='container mx-auto px-4'>
                <PackageFilters />
            </div>
        </section>

        <!-- Packages Grid -->
        <section class='bg-gray-50 py-12 dark:bg-gray-900'>
            <div class='container mx-auto px-4'>
                <PackageGrid />
            </div>
        </section>
    </div>
</Layout>
